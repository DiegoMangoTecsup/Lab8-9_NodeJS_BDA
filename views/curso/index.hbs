<h1>{{title}}</h1>

<h1>Cursos</h1>

    <p >
        <div class="container">
            <h3><a href="/cursos/create">Crear Curso</a></h3>
            <h1>Lista de Cursos</h1>
            {{#if cursos }}
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Curso</th>
                            <th>Fecha de Inscripcion</th>
                            <th>Mensualidad</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{# each cursos }}
                        <tr>
                            <td><a href="/cursos/show/{{ _id }}">{{ curso }}</a></td>
                            <td>{{ fecha_inscripcion }}</td>
                            <td>{{ mensualidad }}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            {{~^~}}
                <div>Cursos no encontrados.</div>
            {{/if}}
        </div>
    </p>
